<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.localbay.anuragsingh">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".Seller.SellerDashboardActivity"
            android:theme="@style/SellerTheme" />
        <activity
            android:name=".Seller.SellerRegistrationActivity"
            android:theme="@style/SellerTheme" />

        <activity
            android:name=".buyer.BuyerRegistrationActivity"
            android:theme="@style/BuyerTheme" />
        <activity
            android:name=".buyer.BuyerDashboardActivity"
            android:theme="@style/BuyerTheme"></activity>
    </application>

</manifest>
