<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.localbay.anuragsingh.LoginOptionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_below="@+id/logo">

        <Button
            android:id="@+id/buyerLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btnVerticalMargin"
            android:layout_marginLeft="@dimen/btnHorizontalMargin"
            android:layout_marginRight="@dimen/btnHorizontalMargin"
            android:layout_marginTop="@dimen/btnVerticalMargin"
            android:layout_weight="1"
            android:background="@drawable/rounded_bordered_box"
            android:minWidth="@dimen/btnMinWidth"
            android:paddingBottom="@dimen/btnVerticalPadding"
            android:paddingLeft="@dimen/btnHorizontalPadding"
            android:paddingRight="@dimen/btnHorizontalPadding"
            android:paddingTop="@dimen/btnVerticalPadding"
            android:text="Buy"
            android:onClick="buyerLoginForm"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryText"
            android:textSize="16dp" />

        <Button
            android:id="@+id/sellerLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btnVerticalMargin"
            android:layout_marginLeft="@dimen/btnHorizontalMargin"
            android:layout_marginRight="@dimen/btnHorizontalMargin"
            android:layout_marginTop="@dimen/btnVerticalMargin"
            android:layout_toEndOf="@+id/buyerLogin"
            android:layout_weight="1"
            android:onClick="sellerLoginForm"
            android:background="@drawable/rounded_bordered_box"
            android:paddingBottom="@dimen/btnVerticalPadding"
            android:paddingLeft="@dimen/btnHorizontalPadding"
            android:paddingRight="@dimen/btnHorizontalPadding"
            android:paddingTop="@dimen/btnVerticalPadding"
            android:text="SELL"
            android:textColor="@color/colorSecondaryText"
            android:textSize="16dp" />
    </LinearLayout>

</FrameLayout>
