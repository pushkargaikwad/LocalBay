<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_box"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_image_black_48dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apple iPhone 6"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subcat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productTitle"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="Subcategory"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/subCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/subcat_label"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/subcat_label"
            android:text="Mobile"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/brand_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subcat_label"
            android:layout_marginTop="5dp"
            android:text="Brand"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/brand_label"
            android:layout_below="@+id/subcat_label"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/brand_label"
            android:text="Apple"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/variantLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brand_label"
            android:layout_marginTop="5dp"
            android:text="Variant"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/variantLabel"
            android:layout_below="@+id/brand_label"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/variantLabel"
            android:text="16GB"
            android:textColor="@color/colorPrimaryText" />

        <RelativeLayout
            android:id="@+id/product_stock_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/variantLabel">

            <TextView
                android:id="@+id/quantityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Quantiy"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/quantityLabel"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/quantityLabel"
                android:text="2"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/priceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantityLabel"
                android:layout_marginTop="5dp"
                android:text="Selling Price"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/priceLabel"
                android:layout_below="@+id/quantityLabel"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/priceLabel"
                android:text="Rs. 23999"
                android:textColor="@color/colorPrimaryText" />


            <TextView
                android:id="@+id/shippingCostLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/priceLabel"
                android:layout_marginTop="5dp"
                android:text="Shipping Cost"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/shippingCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/shippingCostLabel"
                android:layout_below="@+id/quantityLabel"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/shippingCostLabel"
                android:text="Rs. 0"
                android:textColor="@color/colorPrimaryText" />

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>