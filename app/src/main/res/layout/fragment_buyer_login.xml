<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.localbay.anuragsingh.BuyerLoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/buyerPhoneWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/buyerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/buyerPhoneLabel"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/buyerLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btnHeight"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/buyerPhoneWrapper"
            android:layout_marginTop="10dp"
            android:background="@color/colorBuyerPrimary"
            android:minWidth="@dimen/btnMinWidth"
            android:onClick="buyerRequestOTP"
            android:paddingLeft="@dimen/btnHorizontalPadding"
            android:paddingRight="@dimen/btnHorizontalPadding"
            android:text="@string/nextbtnLabel"
            android:textColor="#FFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/buyerLoginBtn"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buyerLoginBtn"
            android:layout_marginTop="18dp"
            android:onClick="buyerRegisterForm"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="SIGN UP AS BUYER"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBuyerPrimaryDark" />


    </RelativeLayout>

</FrameLayout>
